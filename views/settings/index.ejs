<!-- Konten utama -->
<div class="flex-1 flex flex-col ml-64">
  <!-- Navbar -->
  <nav class="bg-white shadow-md p-4 flex justify-between items-center fixed top-0 right-0 left-64 z-10">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Settings</h1>
      <p class="text-gray-500 text-sm">Kelola pengaturan sistem</p>
    </div>
    <div class="flex items-center gap-4">
      <!-- Logout -->
      <a href="#" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
        <i class="fa-solid fa-right-from-bracket"></i>
        <span class="hidden md:inline">Logout</span>
      </a>
    </div>
  </nav>

  <!-- Isi konten -->
  <main class="p-6 overflow-y-auto mt-20 h-screen">
    <div class="max-w-lg mx-auto bg-white p-8 rounded-2xl shadow-lg">
      <h2 class="text-3xl font-bold text-center mb-6 text-gray-800">Pengaturan Denda</h2>
      <h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Denda = <%= setting.penalty_fee %></h1>

      <form action="/settings/updatePenalty" method="POST" class="space-y-6">
        <!-- Input penalty fee -->
        <div>
          <label for="penalty_fee" class="block text-gray-700 mb-2 font-semibold">Denda per Hari</label>
          <div class="flex items-center gap-2 bg-gray-50 border border-gray-300 rounded-lg px-4 py-3 shadow-sm">
            <i class="fa-solid fa-coins text-yellow-500"></i>
            <span class="text-gray-600 font-medium">Rp</span>
            <input
              type="number"
              step="500"
              id="penalty_fee"
              name="penalty_fee"
              value=""
              placeholder="Masukkan nominal denda"
              class="w-full bg-transparent text-gray-800 focus:outline-none placeholder-gray-400"
              required
            />
            <span class="text-gray-600 font-medium">/hari</span>
          </div>
        </div>

        <!-- Tombol simpan -->
        <div class="flex justify-center mt-8">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold shadow-md transition duration-300 flex items-center gap-2"
          >
            <i class="fa-solid fa-floppy-disk"></i>
            Simpan Perubahan
          </button>
        </div>
      </form>

      <!-- Pesan -->
      <% if (pesan) { %>
      <div class="mt-6 text-center bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-sm">
        <i class="fa-solid fa-circle-check mr-2"></i>
        <%= pesan %>
      </div>
      <% } %>
    </div>
  </main>
</div>z