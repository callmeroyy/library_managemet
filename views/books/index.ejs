<!-- Konten utama -->
      <div class="flex-1 flex flex-col ml-64">
        <!-- Navbar -->
        <nav class="bg-white shadow-md p-4 flex justify-between items-center fixed top-0 right-0 left-64 z-10">
          <div>
            <h1 class="text-2xl font-bold text-gray-800">Books Management</h1>
            <p class="text-gray-500 text-sm">Kelola koleksi buku perpustakaan</p>
          </div>
          <div class="flex items-center gap-4">
            <!-- Logout -->
            <a href="#" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
              <i class="fa-solid fa-right-from-bracket"></i>
              <span class="hidden md:inline">Logout</span>
            </a>
          </div>
        </nav>

        <!-- Isi konten -->
        <main class="p-6 overflow-y-auto mt-20 h-screen">
          <!-- Bar Atas -->
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
            <form action="/books" method="get" class="flex flex-wrap justify-center items-center gap-3">
              <!-- Search -->
              <div class="flex items-center bg-white rounded-full shadow-md overflow-hidden border border-gray-200 w-full md:w-[300px]">
                <input type="search" name="search" placeholder="Cari buku..." class="w-full px-4 py-2 text-gray-700 bg-transparent focus:outline-none" />
              </div>

              <!-- Dropdown Kategori -->
              <div class="flex items-center gap-3">
                <select  name="categoryId"  class="bg-white border border-gray-300 rounded-lg px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400">
                  <option value="">Pilih Kategori</option>
                  <% categoryResult.forEach(category=> { %>
                  <option value="<%= category.id %>"><%= category.name %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Button submit -->
              <button type="submit" class="px-4 py-2 bg-indigo-500 text-white font-semibold hover:bg-indigo-600 transition duration-300">
                <i class="fa-solid fa-magnifying-glass"> </i>
              </button>
              <!-- Button Reset -->
              <a href="/books" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-5 py-3 rounded-lg font-semibold transition duration-200">
                <i class="fa-solid fa-rotate-right mr-2"></i>
                Reset
              </a>
            </form>

            <!-- Button Create -->
            <a href="books/create" class="bg-green-500 hover:bg-green-600 text-white px-5 py-3 rounded-lg font-semibold transition duration-200">
              <i class="fa-solid fa-plus mr-2"></i>
              Create Book
            </a>
          </div>

          <!-- Grid Buku Cards -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <% if (searchResult.length > 0) { %>
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                <% searchResult.forEach(book => { %>
                <!-- Card Buku -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-200">
                  <!-- Gambar Buku -->
                  <div class="bg-gray-200 h-48 flex items-center justify-center overflow-hidden">
                    <img src="<%= book.image_path %>" alt="Sampul Buku" class="object-contain rounded-lg shadow-md hover:scale-105 transition duration-300" />
                  </div>
  
                  <!-- Info Buku -->
                  <div class="p-4">
                    <h3 class="font-bold text-gray-800 mb-2 truncate"><%= book.title %></h3>
                    <p class="text-sm text-gray-600 mb-1">
                      <span class="bg-yellow-300 font-bold text-black p-1 rounded-md">Category:</span>
                      <%= book.category_name %>
                    </p>
                    <p class="text-xs text-gray-500 mb-3"><%= book.isbn %></p>
  
                    <!-- Buttons -->
                    <div class="flex gap-2">
                      <a href="books/update?id=<%= book.id %>" class="flex-1 bg-green-500 hover:bg-green-600 text-white px-3 py-2 rounded text-sm transition text-center">
                        <i class="fa-solid fa-pen"></i>
                      </a>
                      <a href="books/delete/<%= book.id %>" class="flex-1 bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded text-sm transition text-center">
                        <i class="fa-solid fa-trash"></i>
                      </a>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
              <% } else {%> 
                <tr>
                  <td colspan="4" class="text-center py-6 text-gray-500 font-medium">
                    <i class="fa-solid fa-circle-exclamation text-yellow-500 mr-2"></i>
                    Tidak ada data ditemukan
                  </td>
                </tr>
              <% } %>

            <!-- Pagination -->
            <div class="flex items-center justify-center mt-8 gap-2">
              <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
                <i class="fa-solid fa-chevron-left"></i>
              </button>
             
              <% for(let i = 1; i <= totalPage; i++) { %>
                <a href="/books?page=<%= i %>&search=<%= search %>&categoryId=<%= categoryId %>"
                   class="px-3 py-1 rounded transition <%= i == page ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                  <%= i %>
                </a>
              <% } %>

              <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
                <i class="fa-solid fa-chevron-right"></i>
              </button>
            </div>
          </div>
        </main>
      </div> 