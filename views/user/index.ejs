<!-- Konten utama -->
<div class="flex-1 flex flex-col ml-64">
  <!-- Navbar -->
  <nav class="bg-white shadow-md p-4 flex justify-between items-center fixed top-0 right-0 left-64 z-10">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Users Management</h1>
      <p class="text-gray-500 text-sm">Kelola data pengguna</p>
    </div>
    <div class="flex items-center gap-4">
      <!-- Logout -->
      <a href="#" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
        <i class="fa-solid fa-right-from-bracket"></i>
        <span class="hidden md:inline">Logout</span>
      </a>
    </div>
  </nav>

  <!-- Isi konten -->
  <main class="p-6 overflow-y-auto mt-20 h-screen">
    <!-- Filter & Action Bar -->
    <form action="/users" method="get" class="grid grid-cols-1 lg:grid-cols-3 gap-4 items-center mb-6">
      <!-- Search -->
      <div class="flex items-center bg-white rounded-full shadow-md overflow-hidden border border-gray-200">
        <input 
          type="search" 
          name="search" 
          value="<%= search %>"
          placeholder="Cari nama atau email..." 
          class="w-full px-4 py-2 text-gray-700 bg-transparent focus:outline-none" 
        />
      </div>
      <!-- Filter Status & Reset -->
      <div class="flex gap-3">
        <!-- Dropdown Filter Status -->
        <div class="flex gap-3 items-center">
          <!-- Dropdown Filter Status -->
          <select 
            name="status"
            class="flex-1 px-4 py-3 bg-white border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 shadow-md hover:shadow-lg transition cursor-pointer"
          >
            <option value="all" <%= status === 'all' ? 'selected' : '' %>>Semua Status</option>
            <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="nonactive" <%= status === 'nonactive' ? 'selected' : '' %>>Non Active</option>
          </select>
      
          <!-- Tombol submit -->
          <button type="submit" class="px-6 py-2 bg-indigo-500 text-white font-semibold hover:bg-indigo-600 transition duration-300 rounded-md">
            <i class="fa-solid fa-magnifying-glass"></i><span class="ms-3">Search</span>
          </button>  
        </div>
        <!-- Button Reset -->
        <a href="/users" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-3 rounded-lg font-semibold transition duration-200 flex items-center gap-2">
          <i class="fa-solid fa-rotate-right"></i>
          <span class="hidden sm:inline">Reset</span>
        </a>
      </div>

      <!-- Create Button -->
      <div class="lg:justify-self-end">
        <a href="/users/create" class="px-5 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow hover:bg-blue-600 transition duration-200 w-full lg:w-auto flex items-center gap-2 justify-center">
          <i class="fa-solid fa-plus"></i>
          <span class="hidden sm:inline">Tambah User</span>
        </a>
      </div>
    </form>

    <!-- Tabel Users -->
    <div class="bg-white p-6 rounded-xl shadow-lg">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h3 class="text-xl font-bold text-gray-800">Daftar Users</h3>
          <p class="text-sm text-gray-500">Total: <%= result.length %> users</p>
        </div>
      </div>

      <!-- Tabel -->
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-100 border-b-2 border-gray-200">
              <th class="text-left p-4 font-semibold text-gray-700">No</th>
              <th class="text-left p-4 font-semibold text-gray-700">Users</th>
              <th class="text-center p-4 font-semibold text-gray-700">Status</th>
              <th class="text-center p-4 font-semibold text-gray-700">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (result.length === 0) { %>
              <tr>
                <td colspan="4" class="text-center py-6 text-gray-500 font-medium">
                  <i class="fa-solid fa-circle-exclamation text-yellow-500 mr-2"></i>
                  Tidak ada data ditemukan
                </td>
              </tr>                    
            <% } else { %> 
              <% result.forEach((user,index) => { %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="p-4">
                <div class="flex items-center gap-3">
                  <%= (page - 1) * limit + index + 1 %>
                </div>
              </td>
              <td class="p-4">
                <div class="flex items-center gap-3">
                  <div>
                    <p class="font-semibold text-gray-800"><%= user.name %></p>
                    <p class="text-sm text-gray-500"><%= user.email %></p>
                  </div>
                  <a href="/bookings/user/<%= user.id %>" class="bg-gradient-to-br from-blue-500 to-blue-600 text-white w-6 h-6 rounded-full flex items-center justify-center shadow-lg mr-6">
                    <i class="fa-solid fa-exclamation text-white text-sm"></i>
                  </a>
                </div>
              </td>
              <td class="p-4">
                <div class="flex justify-center">
                  <% if (user.is_active == 1) { %>
                  <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-semibold flex items-center gap-1">
                    <i class="fa-solid fa-circle-check"></i>
                    Active
                  </span>
                  <% } else { %>
                  <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-semibold flex items-center gap-1">
                    <i class="fa-solid fa-circle-xmark"></i>
                    Inactive
                  </span>
                  <% } %>
                </div>
              </td>
              <td class="p-4">
                <div class="flex justify-center gap-2">
                  <a href="users/update?id=<%= user.id %>" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
                    <i class="fa-solid fa-pen-to-square"></i>
                    Update
                  </a>
                  <% if (user.is_active == 1) { %>
                  <a href="/users/status?id=<%= user.id %>&page=<%= page %>&search=<%= search %>&status=<%= status %>" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
                    <i class="fa-solid fa-ban"></i>
                    Block
                  </a>
                  <% } else { %>
                  <a href="/users/status?id=<%= user.id %>&page=<%= page %>&search=<%= search %>&status=<%= status %>" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
                    <i class="fa-solid fa-ban"></i>
                    Unblock
                  </a>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <p class="text-sm text-gray-600 mt-5">Menampilkan 1-5 dari 5 users</p>
      <div class="flex items-center justify-center mt-6">
        <div class="flex gap-2">
          <button class="px-3 py-1 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
            <i class="fa-solid fa-chevron-left"></i>
          </button>
      
          <% for(let i = 1; i <= totalPage; i++) { %>
            <a href="/users?page=<%= i %>&search=<%= search %>&status=<%= status %>"
                class="px-3 py-1 rounded transition <%= i == page ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
              <%= i %>
            </a>
          <% } %>
      
          <button class="px-3 py-1 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
            <i class="fa-solid fa-chevron-right"></i>
          </button>
        </div>
      </div>
      
    </div>
  </main>
</div>