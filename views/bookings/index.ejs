<!-- Konten utama -->
<div class="flex-1 flex flex-col ml-64">
  <!-- Navbar -->
  <nav class="bg-white shadow-md p-4 flex justify-between items-center fixed top-0 right-0 left-64 z-10">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Users Management</h1>
      <p class="text-gray-500 text-sm">Kelola data pengguna</p>
    </div>
    <div class="flex items-center gap-4">
      <!-- Logout -->
      <a href="#" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 flex items-center gap-2">
        <i class="fa-solid fa-right-from-bracket"></i>
        <span class="hidden md:inline">Logout</span>
      </a>
    </div>
  </nav>

  <!-- Isi konten -->
  <main class="p-6 overflow-y-auto mt-20 h-screen">
    <!-- Filter Bar Atas -->
    <div class="grid grid-cols-2 mb-6">
      <form action="/bookings" method="get" class="flex justify-start items-center gap-4">
        <!-- Search -->
        <div class="w-2/4 flex items-center bg-white rounded-full shadow-md overflow-hidden border border-gray-200">
          <input
            type="search"
            name="keyword"
            value="<%= typeof keyword !== 'undefined' ? keyword : '' %>"
            placeholder="Cari user atau buku"
            class="w-full px-4 py-2 text-gray-700 bg-transparent focus:outline-none"
          />
          <button class="px-4 py-2 bg-indigo-500 text-white font-semibold hover:bg-indigo-600 transition duration-300">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>

        <!-- Dropdown Status -->
        <select
          name="status"
          class="flex-1 px-4 py-3 bg-white border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 shadow-md hover:shadow-lg transition cursor-pointer"
        >
          <option value="" <%= status === '' ? 'selected' : '' %>>Semua history</option>
          <option value="users" <%= status === 'users' ? 'selected' : '' %>>Users</option>
          <option value="books" <%= status === 'books' ? 'selected' : '' %>>Books</option>
        </select>

        <!-- Button Reset -->
        <a href="/bookings" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-5 py-3 rounded-lg font-semibold transition">
          <i class="fa-solid fa-rotate-right mr-2"></i>
          Reset
        </a>
      </form>

      <!-- Button Create -->
      <div class="flex justify-end">
        <a href="/bookings/create" class="w-1/2 bg-green-500 hover:bg-green-600 text-white px-5 py-3 rounded-lg font-semibold transition">
          <i class="fa-solid fa-plus mr-2"></i>
          Tambah Peminjaman
        </a>
      </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-lg">
      <!-- Tabel Peminjaman -->
      <% if (status === "" || status === "all") { %>
        <!-- box tabel -->
        <!-- Info Total -->
        <div class="bg-blue-50 p-4 me-6 rounded-lg mb-6 inline-block">
          <p class="text-sm text-gray-600">Total Buku Dipinjam</p>
          <p class="text-2xl bg-gradient-to-r from-blue-400 to-white text-transparent bg-clip-text font-bold">
            <%= typeof result !== 'undefined' ? result : 0 %> Buku / <%= Array.isArray(resultSearch) ? resultSearch.length : 0 %> Peminjam
          </p>
        </div>

        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-lg font-bold text-gray-800 mb-4">Daftar Peminjaman</h3>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-200">
                  <th class="text-center p-3 font-semibold text-gray-700">No</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Nama Peminjam</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Judul Buku</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Tanggal Pinjam</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Tanggal Kembali</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Status</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% (resultSearch || []).forEach((result, index) => { %>
                  <tr class="border-b hover:bg-gray-100">
                    <td class="p-3 text-center">
                      <span class="text-gray-800"><%= (page - 1) * limit + index + 1 %></span>
                    </td>
                    <td class="p-3">
                      <div class="flex items-center gap-2">
                        <div class="bg-blue-500 text-white w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold">
                          <i class="fa-solid fa-user text-white text-xl"></i>
                        </div>
                        <span><%= result.user_name %></span>
                      </div>
                    </td>

                    <td class="p-3"><%= result.books %></td>
                    <td class="p-3"><%= result.startDate %></td>
                    <td class="p-3"><%= result.endDate %></td>

                    <td class="p-3">
                      <% 
                        let colorClass = 
                          result.status === "Dipinjam" ? "bg-yellow-200 text-yellow-800" :
                          result.status === "Terlambat" ? "bg-red-200 text-red-800" :
                          "bg-green-200 text-green-800";
                      %>
                      <span class="<%= colorClass %> px-3 py-1 rounded-full text-xs font-semibold">
                        <%= result.status %>
                      </span>
                    </td>

                    <td class="p-3">
                      <% if (result.status === "Dipinjam") { %>
                        <a href="/bookings/returnBook?id=<%= result.bookings_id %>" 
                           class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm flex items-center gap-2">
                          <i class="fa-solid fa-check"></i>
                          <span>Kembalikan</span>
                        </a>
                      <% } else { %>
                        <button class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm flex items-center gap-2">
                          <i class="fa-solid fa-eye"></i>
                          <span>Detail</span>
                        </button> 
                      <% } %>
                    </td> 
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

      <% } else if (status === "users") { %>

        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-lg font-bold text-gray-800 mb-4">Daftar Histort Users</h3>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-200">
                  <th class="text-center p-3 font-semibold text-gray-700">No</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Nama Peminjam</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% (resultSearch || []).forEach((result, index) => { %>
                  <tr class="border-b hover:bg-gray-100">
                    <td class="p-3 text-center">
                      <span class="text-gray-800"><%= (page - 1) * limit + index + 1 %></span>
                    </td>
                    <td class="p-3">
                      <div class="flex items-center gap-2">
                        <div class="bg-blue-500 text-white w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold">
                          <i class="fa-solid fa-user text-white text-xl"></i>
                        </div>
                        <span><%= result.user_name %></span>
                      </div>
                    </td>    
                    <td class="p-3 flex justify-center">
                      <a href="/bookings/user/<%= result.id %>" 
                         class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm flex items-center gap-2">
                        <i class="fa-solid fa-eye"></i>
                        <span>Detail</span>
                      </a> 
                    </td> 
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

      <% } else { %>

        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-lg font-bold text-gray-800 mb-4">Daftar Peminjaman</h3>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-200">
                  <th class="text-center p-3 font-semibold text-gray-700">No</th>
                  <th class="text-center p-3 font-semibold text-gray-700">ISBN Buku</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Nama Buku</th>
                  <th class="text-center p-3 font-semibold text-gray-700">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% (resultSearch || []).forEach((result, index) => { %>
                  <tr class="border-b hover:bg-gray-100">
                    <td class="p-3 text-center">
                      <span class="text-gray-800"><%= (page - 1) * limit + index + 1 %></span>
                    </td>
                    <td class="p-3">
                      <div class="flex justify-center gap-2">
                        <span><%= result.isbn %></span>
                      </div>
                    </td>    
                    <td class="p-3">
                      <div class="flex items-center gap-2">
                        <span><%= result.title %></span>
                      </div>
                    </td>    
                    <td class="p-3 flex justify-center">
                      <a href="/bookings/book/<%= result.id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm flex items-center gap-2 justify-center">
                        <i class="fa-solid fa-eye"></i>
                        <span>Detail</span>
                      </a> 
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      <% } %>
      
      <div class="flex items-center justify-center mt-8 gap-2">
        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
          <i class="fa-solid fa-chevron-left"></i>
        </button>
 
        <% for(let i = 1; i <= totalPage; i++) { %>
        <a href="/bookings?page=<%= i %>&search=<%= resultSearch %>&status=<%= status %>" class="px-3 py-1 rounded transition <%= i == page ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>"><%= i %></a>
        <% } %>

        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300 transition">
          <i class="fa-solid fa-chevron-right"></i>
        </button>
      </div>
    </div>
  </main>
</div>